<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Phần header với logo Pokémon Go và các TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Logo Pokémon Go nhỏ -->
        <ImageView
            android:id="@+id/imageViewPokemonLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pokemon_logo"
            android:layout_marginEnd="8dp"/>

        <!-- TextView "Byrdie" -->
        <TextView
            android:id="@+id/textViewByrdie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Byrdie"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- TextView "10 phút trước" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 phút trước"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- TextView "Pokemon Go thu về 2 tỷ đô" -->
    <TextView
        android:id="@+id/textViewPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Go thu về 2 tỷ đô"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <!-- ImageView cho hình ảnh lớn trong bài post -->
    <ImageView
        android:id="@+id/imageViewPokemonPost"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/pokemon_post"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp"/>

    <!-- TextView cho dòng chữ phụ -->
    <TextView
        android:id="@+id/textViewRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doanh thu pokemon go"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="4dp"/>

    <!-- TextView cho link -->
    <TextView
        android:id="@+id/textViewLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dantri.com.vn"
        android:textSize="14sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="16dp"/>

    <!-- Thanh nút Like, Comment, Share -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#800080"
        android:padding="8dp"
        android:gravity="center">

    <!-- Nút Like -->
    <TextView
        android:id="@+id/buttonLike"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="48dp"
        android:text="LIKE"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"/>

        <!-- Nút Comment -->
    <TextView
        android:id="@+id/buttonComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="48dp"
        android:text="COMMENT"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"/>

    <!-- Nút Share -->
    <TextView
        android:id="@+id/buttonShare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="48dp"
        android:text="SHARE"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"/>

</LinearLayout>

    </LinearLayout>